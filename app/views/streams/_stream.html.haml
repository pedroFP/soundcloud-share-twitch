.card{id: dom_id(stream)}
  .card-content.stream-card-content
    .media
      .media-content
        .level
          .level-left
            = link_to stream do
              %p.title.acid-green
                = stream.title
          .level-right
            %span.tag.is-link
              %time{:datetime => stream.aired_at}= stream.aired_at.strftime('%d/%M/%Y-%r')
            &nbsp;
            - if stream.receiving_tracks?
              %span.tag.is-danger
                Live &nbsp; 
                %i.fas.fa-microphone
            - else
              %i.fas.fa-bed.has-text-white
    %hr/
    .content
      %h4.is-4.has-text-white Samples
      - if current_admin
        .content
          = render 'samples/form', sample: Sample.new, stream: stream
      = render 'samples', stream: stream
    - if current_admin
      .content
        = link_to edit_stream_path(stream), class: 'mr-1' do
          %span.tag.is-light
            Edit
        = link_to stream, method: :delete, data: { confirm: 'Are you sure?' } do
          %span.tag.is-danger
            Delete
%br/